<%- include('partials/_header'); %>
  <div class="container mt-4">
    <div class="row mt-5">
      <div class="col-md-5 mt-5">
        <div class="card">
          <div class="card-body">
            <form action="/update/<%= data.id %>" method="post">
              <div class="form-group">
                <label class="form-label">Name</label>
                <input id="name" class="form-control" type="text" name="name" value="<%= data.name %>">
              </div>
              <div class="form-group">
                <label class="form-label">Address</label>
                <input id="address" class="form-control" type="text" name="address" value="<%= data.address %>">
              </div>
              <div class="form-group">
                <label class="form-label">Phone</label>
                <input id="phone" class="form-control" type="text" name="phone" value="<%= data.phone %>">
              </div>
              <div class="d-flex flex-row">
                <button type="submit" class="btn btn-primary btn-block"><i class="bi bi-send"></i> Edit Customer</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/_footer'); %>