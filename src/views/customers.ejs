<%- include('partials/_header'); %>
<div class="container mt-4">
  <div class="row mt-5">
    <div class="col-md-7 mt-5">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for( let i = 0; i < data.length; i++ ) { %>
              <tr>
                <td scope="row"><%= (i + 1) %> </td>
                <td><%= data[i].name %> </td>
                <td><%= data[i].address %> </td>
                <td><%= data[i].phone %> </td>
                <td>
                  <button class="btn btn-danger delete" data-id="<%= data[i].id %>"><i class="bi bi-trash"></i></button>
                </td>
                <td><a href="/update/<%= data[i].id %>" class="btn btn-info"><i class="bi bi-pen"></i></a></td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5 mt-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <label class="form-label">Name</label>
              <input id="name" class="form-control" type="text" name="name" placeholder="Name...">
            </div>
            <div class="form-group">
              <label class="form-label">Address</label>
              <input id="address" class="form-control" type="text" name="address" placeholder="Address...">
            </div>
            <div class="form-group">
              <label class="form-label">Phone</label>
              <input id="phone" class="form-control" type="text" name="phone" placeholder="Phone...">
            </div>
            <div class="d-flex flex-row">
              <button type="submit" class="btn btn-primary btn-block"><i class="bi bi-send"></i> Save Customer</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/_footer'); %>